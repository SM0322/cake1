<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品一覧</h2>
      <%=link_to "商品新規登録", new_admin_item_path %>
        <table class='table table-hover table-inverse'>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
          <% @item.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id)%></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == true %>
              <td><p class="text-success">販売中</p></td>
            <% else %>
              <td><p class="text-muted">販売中止中</p></td>
            <% end %>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>